<div class="dashboard-container">
    <!-- Dashboard Header -->
    <header class="dashboard-header">
        <div class="header-content">
            <div class="header-left">
                <h1 class="dashboard-title">Hospital Dashboard</h1>
                <p class="dashboard-subtitle">Real-time bed and oxygen availability</p>
            </div>
            <div class="header-right">
                <div class="user-info">
                    <span class="user-email" id="user-email">Loading...</span>
                    <button class="btn btn-outline btn-sm" id="logout-btn">
                        <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/>
                        </svg>
                        Sign Out
                    </button>
                </div>
                <button class="refresh-btn" id="refresh-btn" title="Refresh Data">
                    <svg class="refresh-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Stats Overview -->
    <section class="stats-section">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon stat-icon-primary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="total-hospitals">-</div>
                    <div class="stat-label">Total Hospitals</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon stat-icon-success">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="total-beds">-</div>
                    <div class="stat-label">Available Beds</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon stat-icon-warning">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10"/>
                        <circle cx="12" cy="12" r="4"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="total-oxygen">-</div>
                    <div class="stat-label">Oxygen Cylinders</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon stat-icon-info">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number" id="last-update">-</div>
                    <div class="stat-label">Last Update</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Admin Panel (Hidden by default) -->
    <section id="admin-panel" class="admin-panel hidden">
        <div class="panel-card">
            <div class="panel-header">
                <h2 class="panel-title">
                    <svg class="panel-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                    </svg>
                    Admin Panel - Update Availability
                </h2>
            </div>
            
            <form id="update-form" class="update-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="hospital-select" class="form-label">Select Hospital</label>
                        <select id="hospital-select" class="form-select" required>
                            <option value="">Choose a hospital...</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="beds" class="form-label">Available Beds</label>
                        <input type="number" id="beds" name="beds" class="form-input" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="oxygen" class="form-label">Available Oxygen Cylinders</label>
                        <input type="number" id="oxygen" name="oxygen" class="form-input" min="0" required>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        Update Availability
                    </button>
                    <button type="reset" class="btn btn-outline">Clear Form</button>
                </div>
            </form>
            
            <!-- Update Status -->
            <div id="update-status" class="update-status hidden">
                <div class="status-message" id="update-message"></div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="dashboard-content">
        <!-- Hospital List -->
        <section class="hospitals-section">
            <div class="section-header">
                <h2 class="section-title">Hospital Availability</h2>
                <div class="section-actions">
                    <div class="view-toggle">
                        <button class="toggle-btn active" data-view="grid">
                            <svg viewBox="0 0 20 20" fill="currentColor">
                                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                            </svg>
                        </button>
                        <button class="toggle-btn" data-view="list">
                            <svg viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            
            <div id="hospitals-container" class="hospitals-grid">
                <!-- Hospitals will be loaded here -->
            </div>
            
            <!-- Loading State -->
            <div id="loading-hospitals" class="loading-state">
                <div class="loading-spinner">
                    <svg class="spinner" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"/>
                        <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
                    </svg>
                </div>
                <p>Loading hospital data...</p>
            </div>
        </section>

        <!-- Map Section -->
        <section class="map-section">
            <div class="section-header">
                <h2 class="section-title">Hospital Locations</h2>
                <div class="map-controls">
                    <button class="btn btn-outline btn-sm" id="center-map">
                        <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                        </svg>
                        Center Map
                    </button>
                </div>
            </div>
            
            <div class="map-container">
                <div id="map" class="map"></div>
                <div class="map-legend">
                    <div class="legend-item">
                        <div class="legend-color legend-green"></div>
                        <span>Good Availability (20+)</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-color legend-yellow"></div>
                        <span>Moderate (10-19)</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-color legend-red"></div>
                        <span>Low Availability (0-9)</span>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Error State -->
    <div id="error-state" class="error-state hidden">
        <div class="error-content">
            <div class="error-icon">
                <svg viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
            </div>
            <h3 class="error-title">Unable to load data</h3>
            <p class="error-message" id="error-message">Please check your connection and try again.</p>
            <button class="btn btn-primary" onclick="window.location.reload()">Retry</button>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div id="toast-container" class="toast-container"></div>

<script>
    // Dashboard specific initialization
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize dashboard functionality
        if (typeof initializeDashboard === 'function') {
            initializeDashboard();
        }
        
        // View toggle functionality
        const toggleBtns = document.querySelectorAll('.toggle-btn');
        const hospitalsContainer = document.getElementById('hospitals-container');
        
        toggleBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                toggleBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const view = this.dataset.view;
                hospitalsContainer.className = view === 'list' ? 'hospitals-list' : 'hospitals-grid';
            });
        });
        
        // Auto-refresh every 30 seconds
        setInterval(() => {
            if (typeof refreshDashboardData === 'function') {
                refreshDashboardData();
            }
        }, 30000);
    });
</script>
